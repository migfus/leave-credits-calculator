{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"jsx": "react-native",
		"strict": true,
		"paths": {
			"@/*": ["./*"]
		},
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	],
	"typescript.removeUnusedImports": false,
	"typescript.organizeImports": false
}
